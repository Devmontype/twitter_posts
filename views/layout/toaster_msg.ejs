<% if (error!='') { %>
        
    <script>
        var err_msg= `<%= error %>` 
        Toastify({
            text: err_msg,
            duration: 10000,
            gravity: "top", 
            position: "left",
            className: "error",
            style: {
              background: "red",
            }
        }).showToast();        
    </script>
<% } %>
<% if (success!='') { %>
    
    <script>
        var success_msg= `<%= success %>` 
        Toastify({
            text: success_msg,
            className: "success",
            style: {
            background: "linear-gradient(to right, #00b09b, #96c93d)",
            }
        }).showToast();        
    </script>
<% } %>